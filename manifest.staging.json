{
  "manifest_version": 3,
  "key": "",
  "name": "LiGoAI (Staging)",
  "version": "2.0.1",
  "description": "Engage on LinkedIn and X with personalized comments and replies - Staging Build",
  "permissions": ["storage", "sidePanel", "clipboardWrite", "activeTab", "scripting", "contextMenus"],
  "action": {
    "default_title": "LiGo - Open Sidepanel (Staging)"
  },
  "side_panel": {
    "default_path": "sidepanel.html",
    "default_width": 481,
    "min_width": 320,
    "max_width": 550
  },
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.ertiqah.com/*",
    "https://*.medium.com/*",
    "https://medium.com/*",
    "https://*.substack.com/*",
    "https://*.reddit.com/*",
    "https://reddit.com/*",
    "https://*.youtube.com/*",
    "https://youtube.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://stage-ligo.ertiqah.com/*",
      "https://*.ertiqah.com/*"
    ]
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "icons": {
    "16": "assets/48x48.png",
    "32": "assets/48x48.png", 
    "48": "assets/48x48.png",
    "64": "assets/64x64.png",
    "128": "assets/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/48x48.png", "assets/64x64.png", "assets/128x128.png", "assets/icon.png"],
      "matches": ["https://*.linkedin.com/*", "https://x.com/*", "https://*.reddit.com/*", "https://*.facebook.com/*", "https://*.ertiqah.com/*", "https://*.medium.com/*", "https://medium.com/*", "https://*.substack.com/*", "https://*.youtube.com/*", "https://youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'none'; frame-ancestors 'none'; connect-src https://*.ertiqah.com https://*.linkedin.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'"
  }
}
